<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >   <!-- Trạng thái khi nút click -->
        <shape>
            <!--<gradient-->
                <!--android:startColor="#ff0000"-->
                <!--android:endColor="#ffff00"-->
                <!--android:angle="270" />-->
            <solid
                android:color="#206364" />

            <stroke
                android:width="1dp"
                android:color="#FFFFFF" />

            <corners
                android:radius="0dp" />

            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item>            <!-- Trạng thái bình thường khi không click -->
        <shape>

            <solid
                android:color="#337374" />            <!-- Thiết lập màu nền cho nút -->

            <stroke
                android:width="1dp"
                android:color="#FFFFFF" />

            <corners
                android:radius="1dp" />

            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

</selector>